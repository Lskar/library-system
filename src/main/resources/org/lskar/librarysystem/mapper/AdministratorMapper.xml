<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.lskar.librarysystem.mapper.AdministratorMapper">
    <insert id="insertAdmin">
        insert into administrator (adminId,password,username,gender) values (#{adminId},#{password},#{username},#{gender})
    </insert>

    <delete id="deleteAdminByIds">
        delete from administrator where adminId in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="updateAdminBy">
        update administrator set
        <if test="username != null">username = #{username},</if>
        <if test="password != null">password = #{password},</if>
        <if test="gender != null">gender = #{gender}</if>
        where adminId = #{adminId}
    </update>

<select id="selectAdminBy" resultType="org.lskar.librarysystem.entity.Administrator">
    select * from administrator
    <where>
        <if test="adminId != null">adminId = #{adminId}</if>
        <if test="username != null">and username = #{username}</if>
        <if test="password != null">and password = #{password}</if>
    </where>
</select>
</mapper>
